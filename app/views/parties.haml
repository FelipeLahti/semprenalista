- nightclubs.each do |n|
  #accordion2.accordion
    .accordion-group
      .accordion-heading
        %a.accordion-toggle{"data-parent" => "#accordion2", "data-toggle" => "collapse", :href => "#collapse#{n.name}"}
          %i.icon-hand-right
          &nbsp;
          %strong
            = n.name
      .accordion-body.collapse{:id => "collapse#{n.name}"}
        .accordion-inner
          %ul
          - n.parties.each do |p|
            %li
              %a{:href => "#{p.url}"}
                = p.name

